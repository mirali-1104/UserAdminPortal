@{
    ViewData["Title"] = "Privacy Policy";
}
<h2 class="text-center mb-4">Featured Properties</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
       
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/images/sliderimage.jpg" class="card-img-top" alt="Luxury Villa">
                <div class="card-body">
                    <h5 class="card-title text-primary">Luxury Villa</h5>
                    <p class="text-muted mb-1">$500,000</p>
                    <p class="card-text">Experience the ultimate luxury with this modern villa featuring a private pool and garden.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

       
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/images/sliderimage2.jpg" class="card-img-top" alt="City Apartment">
                <div class="card-body">
                    <h5 class="card-title text-primary">City Apartment</h5>
                    <p class="text-muted mb-1">$300,000</p>
                    <p class="card-text">Located in the heart of the city with stunning views and modern amenities.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/images/sliderimage3.jpg" class="card-img-top" alt="Beach House">
                <div class="card-body">
                    <h5 class="card-title text-primary">Beach House</h5>
                    <p class="text-muted mb-1">$750,000</p>
                    <p class="card-text">A serene beach house with direct sea access and breathtaking views.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>
